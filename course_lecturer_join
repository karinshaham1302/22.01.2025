a.
SELECT courses.course_id, courses.course_name,
    lecturers.first_name AS lecturer_first_name,
    lecturers.last_name AS lecturer_last_name
FROM courses
INNER JOIN lecturers ON courses.lecturer_id = lecturers.lecturer_id;


b.
SELECT course_id, course_name
FROM courses
WHERE lecturer_id IS NULL;


c.
SELECT courses.course_id, courses.course_name,
    lecturers.first_name AS lecturer_first_name,
    lecturers.last_name AS lecturer_last_name
FROM courses
LEFT JOIN lecturers ON courses.lecturer_id = lecturers.lecturer_id;


d.
SELECT lecturers.lecturer_id,
    lecturers.first_name AS lecturer_first_name,
    lecturers.last_name AS lecturer_last_name,
    courses.course_name
FROM lecturers
INNER JOIN courses ON lecturers.lecturer_id = courses.lecturer_id;


e.
SELECT lecturers.*
FROM lecturers
LEFT JOIN courses ON lecturers.lecturer_id = courses.lecturer_id
WHERE courses.course_name IS NULL;


f.
SELECT l.lecturer_id, l.first_name,
    l.last_name, l.email,
    c.course_name
FROM lecturers l
LEFT JOIN courses c ON l.lecturer_id = c.lecturer_id
ORDER BY l.lecturer_id;


g.
SELECT courses.course_name,
    lecturers.first_name AS lecturer_first_name,
    lecturers.last_name AS lecturer_last_name
FROM courses
FULL JOIN lecturers ON courses.lecturer_id = lecturers.lecturer_id;


h.
SELECT lecturers.first_name AS lecturer_first_name,
    lecturers.last_name AS lecturer_last_name,
    courses.course_name
FROM lecturers
CROSS JOIN courses;
